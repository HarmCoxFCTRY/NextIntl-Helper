{
  "name": "translation-helper",
  "displayName": "Translation Helper",
  "description": "Helps with looking up translations in your localization files",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "translationHelper.showTranslation",
        "title": "Show Translation"
      },
      {
        "command": "translationHelper.insertTranslationKey",
        "title": "Insert Translation Key"
      },
      {
        "command": "translationHelper.addTranslationKey",
        "title": "Add Translation Key"
      },
      {
        "command": "translationHelper.addTranslationKeyFromHover",
        "title": "Add Translation Key From Hover"
      },
      {
        "command": "translationHelper.addMissingTranslationsFromHover",
        "title": "Add Missing Translations From Hover"
      },
      {
        "command": "translationHelper.highlightUntranslated",
        "title": "Highlight Untranslated Text"
      },
      {
        "command": "translationHelper.translateText",
        "title": "Translate Selected Text"
      },
      {
        "command": "translationHelper.findKeyForText",
        "title": "Find Translation Key for Text"
      }
    ],
    "keybindings": [
      {
        "command": "translationHelper.showTranslation",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "translationHelper.insertTranslationKey",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "translationHelper.addTranslationKey",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "translationHelper.highlightUntranslated",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "translationHelper.showTranslation",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "translationHelper.insertTranslationKey",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "translationHelper.addTranslationKey",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "translationHelper.highlightUntranslated",
          "group": "navigation",
          "when": "editorTextFocus && editorLangId =~ /(javascript|typescript)(react)?/"
        },
        {
          "command": "translationHelper.translateText",
          "group": "navigation",
          "when": "editorHasSelection && editorLangId =~ /(javascript|typescript)(react)?/"
        }
      ]
    },
    "configuration": {
      "title": "Translation Helper",
      "properties": {
        "translationHelper.autoHighlight": {
          "type": "boolean",
          "default": true,
          "description": "Automatically highlight untranslated text when opening or editing files"
        },
        "translationHelper.ignoredPatterns": {
          "type": "array",
          "default": [
            "className",
            "style",
            "id",
            "key",
            "ref",
            "type",
            "name",
            "value",
            "href",
            "src"
          ],
          "description": "Patterns to ignore when highlighting untranslated text"
        },
        "translationHelper.translationFunction": {
          "type": "string",
          "default": "t",
          "description": "The name of the translation function used in your code (e.g., 't', 'i18n.t')"
        },
        "translationHelper.translationFilePatterns": {
          "type": "array",
          "default": [
            "**/messages/*.json",
            "**/locales/*.json"
          ],
          "description": "Glob patterns to locate translation files"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "eslint": "^8.2.0",
    "vscode-test": "^1.6.1"
  }
}
